<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    android:elevation="4dp"
    app:cardBackgroundColor="#ECC9C9"
    app:cardUseCompatPadding="true"
    android:id="@+id/card"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/recycle_img"
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:src="@drawable/recycle" />


        <TextView
            android:id="@+id/list_thing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_toRightOf="@+id/recycle_img"
            android:text="TextView"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold"

            />

        <ImageView
            android:id="@+id/loc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/recycle_img"
            android:layout_below="@+id/list_thing"
            android:src="@drawable/location"
            android:layout_marginLeft="20dp"
            />

        <TextView
            android:id="@+id/list_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/list_thing"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/loc"
            android:text="TextView"
            android:textSize="20sp"
            />

        <ImageView
            android:id="@+id/desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/recycle_img"
            android:layout_below="@+id/list_location"
            android:src="@drawable/description"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="3dp"
            />

        <TextView
            android:id="@+id/list_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/list_location"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@+id/desc"
            android:text="TextView"
            android:textSize="20sp" />


        <ImageView
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_time"
            android:layout_below="@id/list_description"
            android:layout_toLeftOf="@+id/time1"/>

        <TextView
            android:id="@+id/time1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="5dp"
            android:text="text"
            android:textSize="10dp"
            android:textColor="@color/black"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/list_description"
            />

    </RelativeLayout>


</androidx.cardview.widget.CardView>